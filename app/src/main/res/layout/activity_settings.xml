<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ActivitySettings">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_cuenta"
                android:layout_width="match_parent"
                android:paddingTop="18dp"
                android:layout_height="60dp"
                android:paddingStart="15dp"
                android:textSize="20sp"
                android:background="@color/grey"
                android:text="@string/account"
                android:textColor="@color/black"/>
            <LinearLayout
                android:id="@+id/cambiar_contraseña"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_cambiar_contraseña"
                    android:layout_width="311dp"
                    android:paddingTop="18dp"
                    android:layout_height="60dp"
                    android:paddingStart="15dp"
                    android:textSize="20sp"
                    android:text="@string/change_personal_info"
                    android:textColor="@color/black"/>

                <ImageView
                    android:id="@+id/image_cambiar_contraseña"
                    android:layout_width="73dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_flecha_ajustes"
                    tools:layout_editor_absoluteX="339dp"
                    tools:layout_editor_absoluteY="88dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_idioma"
                    android:layout_width="311dp"
                    android:paddingTop="18dp"
                    android:layout_height="60dp"
                    android:paddingStart="15dp"
                    android:textSize="20sp"
                    android:text="@string/lenguage"
                    android:textColor="@color/black"/>
                <ImageView
                    android:id="@+id/image_idioma"
                    android:layout_width="73dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_flecha_ajustes"
                    tools:layout_editor_absoluteX="339dp"
                    tools:layout_editor_absoluteY="88dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/txt_privacidad"
                android:layout_width="match_parent"
                android:paddingTop="18dp"
                android:layout_height="60dp"
                android:paddingStart="15dp"
                android:textSize="20sp"
                android:background="@color/grey"
                android:text="@string/permission"
                android:textColor="@color/black"/>
            <Switch
                android:id="@+id/switch_notificaciones"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textSize="20sp"
                android:text="@string/notification"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
            <Switch
                android:id="@+id/switch_contactos"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textSize="20sp"
                android:text="@string/acces_contact"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
            <Switch
                android:id="@+id/switch_ubicacion"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textSize="20sp"
                android:text="@string/localization"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
            <Switch
                android:id="@+id/switch_mensajes"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textSize="20sp"
                android:text="@string/message"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
            <TextView
                android:id="@+id/txt_otro"
                android:layout_width="match_parent"
                android:paddingTop="18dp"
                android:layout_height="60dp"
                android:paddingStart="15dp"
                android:textSize="20sp"
                android:background="@color/grey"
                android:text="@string/others"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/politica_privacidad">
                <TextView
                    android:id="@+id/txt_politica_privacidad"
                    android:layout_width="311dp"
                    android:paddingTop="18dp"
                    android:layout_height="60dp"
                    android:paddingStart="15dp"
                    android:textSize="20sp"
                    android:text="@string/privacity"
                    android:textColor="@color/black"/>
                <ImageView
                    android:id="@+id/image_politica_privacidad"
                    android:layout_width="73dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_flecha_ajustes"
                    tools:layout_editor_absoluteX="339dp"
                    tools:layout_editor_absoluteY="88dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/contacto">
                <TextView
                    android:id="@+id/txt_contacto"
                    android:layout_width="311dp"
                    android:paddingTop="18dp"
                    android:layout_height="60dp"
                    android:paddingStart="15dp"
                    android:textSize="20sp"
                    android:text="@string/contact"
                    android:textColor="@color/black"/>
                <ImageView
                    android:id="@+id/image_contacto"
                    android:layout_width="73dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_flecha_ajustes"
                    tools:layout_editor_absoluteX="339dp"
                    tools:layout_editor_absoluteY="88dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_sobre_nosotros"
                    android:layout_width="311dp"
                    android:paddingTop="18dp"
                    android:layout_height="60dp"
                    android:paddingLeft="15dp"
                    android:textSize="20sp"
                    android:text="@string/about_us"
                    android:textColor="@color/black"/>
                <ImageView
                    android:id="@+id/image_sobre_nosotros"
                    android:layout_width="73dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_flecha_ajustes"
                    tools:layout_editor_absoluteX="339dp"
                    tools:layout_editor_absoluteY="88dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/cerrar_sesion">
                <TextView
                    android:id="@+id/txt_cerrar_sesion"
                    android:layout_width="311dp"
                    android:paddingTop="18dp"
                    android:layout_height="60dp"
                    android:paddingLeft="15dp"
                    android:textSize="20sp"
                    android:text="@string/log_out"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
                <ImageView
                    android:id="@+id/image_cerrar_sesion"
                    android:layout_width="73dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_flecha_ajustes"
                    tools:layout_editor_absoluteX="339dp"
                    tools:layout_editor_absoluteY="88dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>